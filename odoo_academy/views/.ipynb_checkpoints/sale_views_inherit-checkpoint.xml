<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_order_form_inherit_academy">
            <field name="name">sale.order.form.inherit.academy</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/><!--aquí usaremos ref que toma una identificación externa y lo mapea en la base de datos, el valor lo conseguimos con el modo depurar>EditViewForm,"sale.view_order_form".-->
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="session_id"/>
                </xpath>
                
                <field name="partner_id" position="before">
                    <field name="instructor_id" attrs="{'invisible':[('session_id', '=', False)]}"/><!--Para no mostrar la identificacion del instructor y los id de los estudiantes usamos "attrs"-->
                </field>
                
                <xpath expr="//sheet//notebook" position="inside">
                    <page string="Students" attrs="{'invisible':[('session_id', '=', False)]}"><!--No mostramos los id de los students tampoco con "attrs" como arriba.-->
                        <field name="student_ids">
                            <tree>
                                <field name="name"/>
                                <field name="phone"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>